{
  "compilerOptions": {
    "typeRoots": ["./src/types"],
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": ".", // Set the base URL for module resolution
    "paths": {
      "@/*": ["./src/*"] // If you're using alias paths, configure them here
    }
  }
}
